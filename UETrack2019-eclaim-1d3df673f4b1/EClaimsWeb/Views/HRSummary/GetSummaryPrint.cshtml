
@model List<EClaimsEntities.Models.CustomClaim>

@{
    ViewBag.Title = "GetSummaryPrint";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <style type="text/css" media="print">
        @@media print {

            @@page {
                size: auto !important;
                max-height: 100%;
                max-width: 100%
            }
        }
    </style>
</head>
<body>

    <div style="width:100%; text-align:center;"><h4>Summary</h4></div>
    <br />

    <table class="print-friendly" width="100%" border="0" style="font-size:10px; text-align:center;">

        <tr style="line-height:14px">
            <td>Item</td>
            <td>Requester</td>
            <td>Date</td>
            <td>Particulars of Payment</td>
            <td>Contact Number</td>
            <td>Payee Name</td>
            <td>Cheque No</td>
            <td>Amount</td>
            <td>Total Claim</td>
            <td>Approver</td>
            <td>Status</td>
        </tr>
        <tbody>
            @foreach (var item in Model)
            {
            <tr style="line-height:13px">
                @*<td style="text-align:left;width:12%;">@item.CNO</td>*@
                <td>@item.CNO</td>
                <td>@item.Name</td>
                @*<td style="text-align:left;width:20%;">@item.CreatedDate</td>*@
                <td>@item.CreatedDate</td>
                <td>@item.ParticularsOfPayment</td>
                <td>@item.Phone</td>
                <td>@item.PayeeName</td>
                <td>@item.ChequeNo</td>
                <td class="text-align-right">$@Math.Round((decimal)item.Amount, (int)2).ToString("###,##,##0.00")</td>
                <td class="text-align-right">$@Math.Round((decimal)item.GrandTotal, (int)3).ToString("#,##0.00")</td>
                @if (item.ApprovalStatus != 3 && item.ApprovalStatus != 4 && item.ApprovalStatus != -5 && item.ApprovalStatus != 5)
                {
                    <td>@item.Approver</td>
                }
                else
                {
                    <td></td>
                }
                <td>@item.ClaimStatusName</td>
            </tr>
            }
        </tbody>
    </table>
</body>
</html>
