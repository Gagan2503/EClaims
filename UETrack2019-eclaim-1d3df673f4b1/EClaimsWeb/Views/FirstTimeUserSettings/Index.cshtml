    <script>
        //$(document).ready(function () { $.fn.modal.Constructor.prototype.enforceFocus = function () { }; });
        function isNumber(evt) {
            //alert("number");
            evt = (evt) ? evt : window.event;
            var charCode = (evt.which) ? evt.which : evt.keyCode;
            if (charCode > 31 && (charCode < 47 || charCode > 57) && charCode != 44) {
                return false;
            }
        }

        function FetchBankSwiftBIC(e) {
            var bankName = $("#txtBankName option:selected").text();
            var selectedValue = e.target.value;
            if (selectedValue == '0') {
                return;
            } else {
                $('.txtBankCode').val(selectedValue);
                $('.txtBankName').val(bankName);
            }

            $.ajax({
                url: '@Url.Action("GetBankSwiftBIC", "UserSettings")',
                type: 'GET',
                data: {
                    BankCode: selectedValue,
                },
                success: function (data) {
                    $(".txtBankSWIFTBIC").val(data);
                },
                error: function () {
                }
            });
        }

        var form = $("#example-basic");
        $("#example-basic").steps({
            headerTag: "h3",
            bodyTag: "section",
            transitionEffect: "slideLeft",
            stepsOrientation: 'horizontal',
            autoFocus: true,
            onStepChanging: function (event, currentIndex, newIndex) {
                if (newIndex < currentIndex) {
                    $('#frmFirstTimeUserSetting').valid();
                    $('span[data-valmsg-for="' + $(this).attr('name') + '"')
                        .removeClass('field-validation-error')
                        .addClass('field-validation-valid')
                        .empty();
                    return true;
                }

                $('#frmFirstTimeUserSetting').valid();
                $('.chkboxrequired[data-val="true"]:visible').each(function () {
                    if (!$(this).is(':checked')) {
                        $('span[data-valmsg-for="' + $(this).attr('name') + '"')
                            .removeClass('field-validation-valid')
                            .addClass('field-validation-error')
                            .append('<span id="Code-error" class="">' + $(this).attr('data-val-required') + '</span>');
                        //data-val-required//data-valmsg-for
                    } else {
                        $('span[data-valmsg-for="' + $(this).attr('name') + '"')
                            .removeClass('field-validation-error')
                            .addClass('field-validation-valid')
                            .empty();
                    }
                });
                return $('#frmFirstTimeUserSetting .field-validation-error:not(.excludeinclientvalidation):visible').length == 0;
            },

            onFinishing: function (event, currentIndex) {
                $('#frmFirstTimeUserSetting').valid();
                $('.chkboxrequired[data-val="true"]:visible').each(function () {
                    debugger;
                    if (!$(this).is(':checked')) {
                        $('span[data-valmsg-for="' + $(this).attr('name') + '"')
                            .removeClass('field-validation-valid')
                            .addClass('field-validation-error')
                            .append('<span id="Code-error" class="">' + $(this).attr('data-val-required') + '</span>');
                        //data-val-required//data-valmsg-for
                    } else {
                        if ($('#frmFirstTimeUserSetting .field-validation-error:not(.excludeinclientvalidation):visible').length == 0) {
                            $('#frmFirstTimeUserSetting').submit();
                        } else {
                            return false;
                        }
                    }
                });

            }
        });
        $('.custom-file-input').on('change', function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).next('.custom-file-label').html(fileName);
            $('#filename').val(fileName);
            $('#BankStatementName').val(fileName);
        });
        $('#bankStatementUpload').on('click', function () {
            $('#bankStatementUploadControl').click();
        });
    </script>
